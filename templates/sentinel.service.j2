# {{ ansible_managed }}
[Unit]
Description=Redis sentinel daemon
After=network.target
After=network-online.target
Wants=network-online.target

[Service]
ExecStartPre=-/usr/bin/echo '512' > /proc/sys/net/core/somaxconn
ExecStart=/usr/local/bin/redis-server /etc/redis/sentinel_{{ redis_sentinel_port }}.conf --sentinel --supervised systemd
ExecStop=/usr/local/libexec/redis-shutdown redis/sentinel_{{ redis_sentinel_port }}
Type=notify
# User=redis
# Group=redis
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target